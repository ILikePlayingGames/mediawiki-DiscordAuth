{
  "name": "DiscordAuth",
  "version": "1.0.0",
  "author": [
	"Shroomok"
  ],
  "url": "https://github.com/shroomok/mediawiki-DiscordAuth",
  "description": "Allow users from specified Discord server access to your wiki",
  "type": "extension",
  "requires": {
	"MediaWiki": ">= 1.35.0",
	"extensions": {
	  "PluggableAuth": ">= 6.0",
	  "WSOAuth": ">= 7.0.0"
	}
  },
  "MessagesDirs": {
	"DiscordAuth": [
	  "i18n"
	]
  },
  "AutoloadNamespaces": {
	"DiscordAuth\\": "src/"
  },
  "ServiceWiringFiles": [
	"includes/ServiceWiring.php"
  ],
  "Hooks": {
	"WSOAuthAfterGetUser": "main",
	"BeforePageDisplay": "main"
  },
  "HookHandlers": {
	"main": {
	  "class": "\\DiscordAuth\\DiscordAuthHooks"
	}
  },
  "config": {
	"DiscordAuthBotToken": {
	  "value": false
	}
  },
  "load_composer_autoloader": true,
  "manifest_version": 2
}
